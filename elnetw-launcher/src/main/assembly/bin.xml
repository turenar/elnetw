<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<outputFileNameMapping>
				${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}
			</outputFileNameMapping>
			<excludes>
				<exclude>jp.syuriken.snsw:*</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<outputFileNameMapping>
				${artifact.artifactId}-${describedVersion}${dashClassifier?}.${artifact.extension}
			</outputFileNameMapping>
			<includes>
				<include>jp.syuriken.snsw:*</include>
			</includes>
			<excludes>
				<exclude>jp.syuriken.snsw:elnetw-launcher</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>bin</outputDirectory>
			<outputFileNameMapping>launcher.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>jp.syuriken.snsw:elnetw-launcher</include>
			</includes>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>../</directory>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>CONTRIBUTORS*</include>
				<include>NOTICE*</include>
				<include>ChangeLog*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>bin</directory>
			<outputDirectory>bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../doc/license</directory>
			<includes>
				<include>*</include>
			</includes>
			<outputDirectory>doc/license</outputDirectory>
			<lineEnding>dos</lineEnding>
		</fileSet>
	</fileSets>
</assembly>
