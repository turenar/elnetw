<configuration>
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>twclient.log</file>
		<encoder>
			<Pattern>
				%d{HH:mm:ss.SSS} [%-4level %logger{36}] %msg%n
			</Pattern>
		</encoder>
	</appender>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<Target>System.out</Target>
		<encoder>
			<Pattern>
				%d{HH:mm:ss.SSS} [%-4level %logger{36}] %msg%n
			</Pattern>
		</encoder>
	</appender>

	<logger name="jp.syuriken.snsw">
		<level value="TRACE" />
	</logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
</configuration>